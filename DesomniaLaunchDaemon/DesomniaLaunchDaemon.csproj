<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>MadWizard.Desomnia.LaunchDaemon</RootNamespace>
    <AssemblyName>desomniad</AssemblyName>
    <LangVersion>preview</LangVersion>
	<RollForward>LatestMajor</RollForward>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DesomniaCore\DesomniaCore.csproj" />
    <ProjectReference Include="..\modules\NetworkMonitor\NetworkMonitor.csproj" />
    <ProjectReference Include="..\plugins\FirewallKnockOperator\FirewallKnockOperator.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NLog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
